{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "outDir": "./static/js",
        "rootDir": "./static/ts",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    },
    "include": [
        "static/ts/**/*"
    ],
    "exclude": [
        "node_modules",
        "static/js"
    ]
}